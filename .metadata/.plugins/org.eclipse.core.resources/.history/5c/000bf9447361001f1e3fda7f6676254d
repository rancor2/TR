package gola;
import java.util.Scanner;

public class hola {
    public static void main(String[] args) {
    	
    	Scanner lectura = new Scanner(System.in);
    	
    	System.out.println("ingrese radio");
    	int radio = lectura.nextInt();
    	
    	System.out.printf("El area es .2f%n% el diametro es: %n%d y longitud es %n%.2f ", Math.PI*radio*radio,radio*2,radio*Math.PI*2);
    	lectura.close();
    }
}
